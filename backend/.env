# MongoDB Connection URI
# Replace admin and secret with your actual MongoDB credentials if you set them
MONGO_USER=admin
MONGO_PASSWORD=secret
MONGO_DB=login_microservice
MONGO_HOST=localhost
MONGO_PORT=27017

# Constructed full URI
MONGODB_URI=mongodb://admin:secret@localhost:27017/login_microservice?authSource=admin

# Application Port
PORT=5002

# Node environment
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Password Hashing
BCRYPT_SALT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://localhost:5173 